  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: main.py (LED Control MCP Server)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
